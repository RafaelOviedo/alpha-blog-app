<h1 class="text-center mt-4">Log in</h1>

<div class="container">
    <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-5 rounded", local: true) do |f| %>
        <div class="form-group row">
            <%= f.label :email, class: "col-2 col-form-label" %>
            <div class="col-10">
                <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
            </div>
        </div>

        <div class="form-group row">
            <%= f.label :password, class: "col-2 col-form-label" %>
            <div class="col-10">
                <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <%= f.submit "Log in!", class: "btn btn-success btn-lg" %>
        </div>

    <% end %>

    <%= link_to 'Return to articles listing', articles_path %>
</div>