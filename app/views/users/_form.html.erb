<div class="container">
    <%= render 'shared/errors', obj: @user %>
    <%= form_with(model: @user, class: "shadow p-3 mb-5 rounded", local: true) do |f| %>
        <div class="form-group row">
            <%= f.label :username, class: "col-2 col-form-label" %>
            <div class="col-10">
                <%= f.text_field :username, class: "form-control", placeholder: "Enter an username" %>
            </div>
        </div>

        <div class="form-group row">
            <%= f.label :email, class: "col-2 col-form-label" %>
            <div class="col-10">
                <%= f.email_field :email, class: "form-control", placeholder: "Enter an email" %>
            </div>
        </div>

        <div class="form-group row">
            <%= f.label :password, class: "col-2 col-form-label" %>
            <div class="col-10">
                <%= f.password_field :password, class: "form-control", placeholder: "Enter a password" %>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <%= f.submit(@user.new_record? ? "Sign up!" : "Update account", class: "btn btn-success btn-lg") %>
        </div>

    <% end %>

    <%= link_to 'Return to articles listing', articles_path %>
</div>